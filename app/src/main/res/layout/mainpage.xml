<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradation">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="COM'IT"
            android:textSize="30dp"
            android:fontFamily="@font/scdream5">
        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_notice"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="10dp"

        android:text="공지사항"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/scdream3"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:elevation="5dp"
        android:drawableLeft="@drawable/notice_shape"
        android:background="@drawable/main_shape" />

    <Button
        android:id="@+id/btn_guide"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"

        android:text="길라잡이"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/scdream3"

        app:layout_constraintTop_toBottomOf="@id/btn_notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:elevation="5dp"
        android:drawableLeft="@drawable/guide_shape"
        android:background="@drawable/main_shape"
        />

    <Button
        android:id="@+id/btn_community"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="@drawable/main_shape"
        android:drawableLeft="@drawable/community_shape"
        android:paddingTop="8dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"

        android:text="커뮤니티"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/scdream3"

        app:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_guide" />

    <Button
        android:id="@+id/btn_lecture"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:background="@drawable/main_shape"
        android:drawableLeft="@drawable/lectureeval_shape"
        android:paddingTop="8dp"
        android:layout_marginTop="20dp"
        android:text="강의평가"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/scdream3"

        android:scaleType="fitCenter"
        app:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_community" />


    <Button
        android:id="@+id/btn_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/setting_shape"

        android:scaleType="fitCenter"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

<!--    <TextView-->
<!--        android:id="@+id/tv_settings"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:text="설정"-->
<!--        android:textColor="#000000"-->
<!--        android:textSize="14sp"-->
<!--        app:layout_constraintEnd_toEndOf="@id/btn_community"-->
<!--        app:layout_constraintStart_toStartOf="@id/btn_community"-->
<!--        app:layout_constraintTop_toBottomOf="@id/btn_settings" />-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id = "@+id/fab"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:src = "@drawable/ic_comme"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:backgroundTint="#BCCDD5">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>
